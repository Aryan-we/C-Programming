
#include <stdio.h>
#include <stdlib.h>

typedef struct node {
    int data;
    struct node *next;
} n;

n* getnode(int a) {
    n *ptr = (n *)malloc(sizeof(n));
    ptr->data = a;
    ptr->next = NULL;
    return ptr;
}

n* createll() {
    int num, val;
    printf("Enter the number of nodes: ");
    scanf("%d", &num);

    if (num <= 0) return NULL;

    n *head = NULL, *tail = NULL;

    for (int i = 0; i < num; i++) {
        printf("Enter value for node %d: ", i + 1);
        scanf("%d", &val);

        n *tmp = getnode(val);

        if (head == NULL) {
            head = tmp;
            tail = tmp;
        } else {
            tail->next = tmp;
            tail = tmp;
        }
    }

    return head;
}

void prin(n *s) {
    while (s != NULL) {
        printf("%d->", s->data);
        s = s->next;
    }
    printf("NULL\n");
}

int main() {
    n *head = createll();
    prin(head);
    return 0;
}
